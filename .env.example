# ======================
# PostgreSQL Configuration (used by Docker Compose)
# ======================
POSTGRES_DB=yelp_analytics
POSTGRES_USER=yelp_user
POSTGRES_PASSWORD=yelp_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ======================
# Database Connection String (used by FastAPI backend)
# ======================
DATABASE_URL=postgresql+asyncpg://yelp_user:yelp_password@localhost:5432/yelp_analytics

# Database Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ======================
# Application Settings
# ======================
ENVIRONMENT=development
DEBUG=True

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080

# ======================
# PgAdmin Configuration (optional - use with 'docker compose --profile tools up')
# ======================
PGADMIN_EMAIL=admin@yelp-analytics.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050
